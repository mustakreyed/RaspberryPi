
@{
    ViewBag.Title = "SensorConfig";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="dashboard-info">
                <div class="alert alert-info alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    Manage your <strong>Profile,</strong> configure your <strong>System</strong> and <strong>Devices</strong>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="user-dashboard">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Nav tabs -->
                <div class="card">
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation"><a href='@Url.Action("Index","UserDashboard")'>Control Devices</a></li>
                        <li role="presentation" ><a href='@Url.Action("ReconfigIndex", "UserDashboard")'>Reconfigure Devices</a></li>
                        <li role="presentation" class="active"><a href='@Url.Action("SensorConfig","PiConfig")'>Config Sensor Devices</a></li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="control">
                            <!-- device list start -->
                            <div class="row">
                               

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                     

                                        <div class="form-group">
                                            <div class="control-label col-md-4 ">
                                                Temparature Sensor:
                                            </div>
                                            <div class="col-md-6">
                                                <input type="text" class="form-control" name="temparatureControledPin" placeholder="GPIO Pin Number" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="control-label col-md-4 ">
                                                Light Sensor:
                                            </div>
                                            <div class="col-md-6">
                                                <input type="text" class="form-control" name="lightControledPin" placeholder="GPIO Pin Number"/>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="control-label col-md-4 ">
                                                Water Level Sensor:
                                            </div>
                                            <div class="col-md-6">
                                                <input type="text" class="form-control" name="waterControledPin" placeholder="GPIO Pin Number"/>
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <div class="col-md-offset-8 col-md-1">
                                                <input type="submit" value="Create" class="btn btn-default" />
                                            </div>

                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<div class="container">
    <div class="row">
       

    </div>
</div>

